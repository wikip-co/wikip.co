<div id="footer-post-container">
  <div id="footer-post">

    <div id="nav-footer" style="display: none">
      <ul>
        <% for (var i in theme.nav) { %>
          <li><a href="<%- url_for(theme.nav[i]) %>">
              <%= __('nav.'+i).replace("nav.", "" ) %>
            </a></li>
          <% } %>
      </ul>
    </div>
    <div id="toc-footer" style="display: none">
      <%- list_tags(page.tags, { show_count: false, style: 'link', separator: ', ' }) %>
    </div>
    <div id="image-footer" style="display: none">
      <%- partial('mobile_image') %>
    </div>
    <div id="actions-footer">
      <a id="menu" class="icon" href="<%- url_for("/") %>"><i
        class="fa-solid fa-home fa-lg" aria-hidden="true"></i>
        Home
      </a>
      <a id="toc" class="icon" href="#" onclick="$('#toc-footer').toggle();return false;"><i
        class="fa-solid fa-list fa-lg" aria-hidden="true"></i>
        Keywords
      </a>
      <a id="top" style="display:none" class="icon" href="#"
      onclick="$('html, body').animate({ scrollTop: 0 }, 'fast');"><i class="fa-solid fa-chevron-up fa-lg"
      aria-hidden="true"></i>
      <%= __('post.mobile.back_to_top') %>
      </a>
      <a id="toc" class="icon" href="#" onclick="$('#image-footer').toggle();return false;"><i
      class="fa-solid fa-file fa-lg" aria-hidden="true"></i>
      Image
      </a>
    </div>

  </div>
</div>